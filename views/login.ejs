    <link rel="stylesheet" href="/loginstyle.css" />

</head>

<body>
    <header>
        <div id="menu-bar" class="fa-solid fa-bars"></div>

        <a href="/home" class="logo">Trendy Blogs</a>
        <nav class="navbar">
            <a href="/home">Home</a>
            <a href="/author">Author Home</a> <!-- Link to Author's Home -->
            <a href="/reader-home">Reader Home</a> <!-- Link to Reader's Home -->

            <a href="/about">About</a> <!-- Link to About Page -->
            <a href="/contact">Contact Us</a> <!-- Link to Contact Page -->
        </nav>
        <!-- You might want to remove the game icon if it's not relevant to your blog -->
    </header>

    <section class="topi">
        <div class="min-vh-100 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-sm-7 mx-auto">
                        <div class="shadow-lg">
                            <div class="d-flex align-items-center">
                                <div class="d-none d-md-block d-lg-block">
                                    <img src="images/sho.jpg" class="objectFit" />
                                </div>
                                <div class="p-4" id="formPanel">
                                    <div class="text-center mb-5">
                                        <h1 class="customHeading h3 text-uppercase">Login</h1>
                                    </div>
                                    <form method="post" action="">
                                        <div class="custom-form-group">
                                            <label class="text-uppercase" for="email">Email</label>
                                            <input type="text" value="usman.akram@gmail.com" id="email" name="email"
                                                class="pb-1" /><span class="pb-1"><i class="fas fa-user"></i></span>
                                        </div>
                                        <div class="custom-form-group mt-3">
                                            <label class="text-uppercase" for="password">Password</label>
                                            <input type="password" value="usman" id="password" name="password"
                                                class="pb-1" /><span class="pb-1"><i id="showCursor"
                                                    class="fas fa-eye-slash" onclick="showPassword(event)"></i></span>
                                        </div>
                                        <div class="mt-5">
                                            <button class="w-100 p-2 d-block custom-btn" type="submit">Login</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </section>

    <section class="footer">
        <div class="box-container">
            <div class="box">
                <h3>About Trendy Blogs</h3>
